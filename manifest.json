{
    "manifest_version": 3,
    "name": "Smart AI Job Apply",
    "version": "2.0.0",
    "description": "AI-powered job application form filler. Uses your Gemini API key to intelligently fill forms with your resume data.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_page": "options/options.html",
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils/ai-client.js",
                "utils/resume-manager.js",
                "utils/form-analyzer.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css",
                "content/sidebar.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "chat/chat.html",
                "chat/chat.css",
                "chat/chat.js",
                "utils/ai-client.js",
                "utils/resume-manager.js",
                "utils/form-analyzer.js",
                "utils/context-classifier.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}